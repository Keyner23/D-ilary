@model D_Ilary.Web.Data.Entities.Equipment

@{
    ViewData["Title"] = "Crear Equipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <h2 class="text-center fw-bold text-primary mb-4">
                        <i class="bi bi-tools"></i> Registrar Equipo
                    </h2>
                    <hr class="mb-4" />

                    <form asp-controller="Equipment" asp-action="CreateEquipment" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">Nombre del equipo</label>
                            <input asp-for="Name" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Ej: Compresor de aire" required />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="priceHour" class="form-label fw-semibold">Precio por hora</label>
                            <input asp-for="priceHour" type="number" step="0.01" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Ej: 15000" required />
                            <span asp-validation-for="priceHour" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg rounded-4 shadow-sm">
                                <i class="bi bi-check-circle-fill me-2"></i> Crear Equipo
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-controller="Equipment" asp-action="Index" class="text-secondary text-decoration-none">
                            <i class="bi bi-arrow-left-circle"></i> Volver al listado
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
