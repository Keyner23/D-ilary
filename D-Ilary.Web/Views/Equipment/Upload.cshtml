@model D_Ilary.Web.Data.Entities.Equipment

@{
    ViewData["Title"] = "Carga de Excel";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - D'Ilary</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body style="background-color: #f4f4f4; font-family: 'Segoe UI', sans-serif;">

    <div class="d-flex" style="min-height: 100vh;">
        <!-- Sidebar -->
        <div class="bg-dark text-white p-4 d-flex flex-column justify-content-between" style="width: 250px;">
            <div>
                <h3 class="fw-bold mb-4 text-center" style="color: #ff7f00;">
                    <i class="bi bi-shop me-2"></i>D'Ilary
                </h3>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a asp-controller="Equipment" asp-action="Index" class="nav-link active text-warning fw-semibold d-flex align-items-center">
                            <i class="bi bi-tools me-2"></i> Equipos
                        </a>
                    </li>

                    <hr class="text-secondary" />
                    
                    <li class="nav-item mb-2">
                        <a asp-controller="Equipment" asp-action="Upload"
                           class="btn btn-outline-warning w-100 rounded-pill fw-semibold text-start">
                            <i class="bi bi-cloud-upload me-2"></i> Cargar Excel
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Equipment" asp-action="Create"
                           class="btn btn-warning w-100 text-white rounded-pill fw-semibold text-start">
                            <i class="bi bi-plus-circle me-2"></i> Nuevo Equipo
                        </a>
                    </li>
                </ul>
            </div>

            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index"
                   class="btn btn-outline-light w-100 rounded-pill fw-semibold">
                    <i class="bi bi-box-arrow-right me-2"></i> Cerrar sesi√≥n
                </a>
            </div>
        </div>

        
        <div class="flex-grow-1">
            
            <nav class="navbar navbar-light bg-white shadow-sm px-4 py-3">
                <h4 class="fw-bold mb-0 text-dark">
                    <i class="bi bi-file-earmark-spreadsheet text-warning me-2"></i> Cargar Archivo Excel
                </h4>
            </nav>

            <!-- Upload Card -->
            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-lg-6 col-md-8">
                        <div class="card shadow-lg border-0 rounded-4">
                            <div class="card-body p-5 text-center">
                                <h3 class="fw-bold text-secondary mb-4">
                                    <i class="bi bi-cloud-arrow-up text-warning me-2"></i> Cargar Equipos desde Excel
                                </h3>

                                <form asp-action="UploadExcel" asp-controller="Equipment" method="post" enctype="multipart/form-data">
                                    <div class="mb-4">
                                        <input type="file" name="file" accept=".xlsx"
                                               class="form-control form-control-lg border-warning-subtle" required />
                                    </div>

                                    <button type="submit" class="btn btn-warning text-white btn-lg rounded-pill px-5 shadow-sm">
                                        <i class="bi bi-upload me-2"></i> Subir Archivo
                                    </button>
                                </form>

                                @if (ViewBag.Message != null)
                                {
                                    <div class="alert alert-@ViewBag.AlertType mt-4" role="alert">
                                        @ViewBag.Message
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
