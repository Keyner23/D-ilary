@model D_Ilary.Web.Data.Entities.Sale

@{
    ViewData["Title"] = "Registrar Venta";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - D'Ilary</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body style="background-color: #f4f4f4; font-family: 'Segoe UI', sans-serif;">

    <div class="d-flex" style="min-height: 100vh;">
        <!-- Sidebar -->
        <div class="bg-dark text-white p-4 d-flex flex-column justify-content-between" style="width: 250px;">
            <div>
                <h3 class="fw-bold mb-4 text-center" style="color: #ff7f00;">
                    <i class="bi bi-shop me-2"></i>D'Ilary
                </h3>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a asp-controller="Equipment" asp-action="Index" class="nav-link text-warning fw-semibold d-flex align-items-center">
                            <i class="bi bi-tools me-2"></i> Equipos
                        </a>
                    </li>

                    <hr class="text-secondary" />

                    <li class="nav-item mb-2">
                        <a asp-controller="Equipment" asp-action="Upload"
                           class="btn btn-outline-warning w-100 rounded-pill fw-semibold text-start">
                            <i class="bi bi-cloud-upload me-2"></i> Cargar Excel
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Equipment" asp-action="Create"
                           class="btn btn-warning w-100 text-white rounded-pill fw-semibold text-start">
                            <i class="bi bi-plus-circle me-2"></i> Nuevo Equipo
                        </a>
                    </li>
                </ul>
                
                <br/><br/><br/>
                
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a class="nav-link active text-warning fw-semibold d-flex align-items-center">
                            <i class="bi bi-person-circle me-2"></i> Clientes
                        </a>
                    </li>
                    
                    <hr class="text-secondary"/>
                    
                    <li class="nav-item mb-2">
                        <a class="btn btn-outline-warning w-100 rounded-pill fw-semibold text-start">
                            <i class="bi bi-person-fill-add me-2"></i>Crear Cliente
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="btn btn-warning w-100 text-white rounded-pill fw-semibold text-start">
                            <i class="bi bi-person-video3 me-2"></i> Ver Clientes
                        </a>
                    </li>
                </ul>

                <br/><br/><br/>
                
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a class="nav-link active text-warning fw-semibold d-flex align-items-center">
                            <i class="bi bi-receipt me-2"></i> Ventas
                        </a>
                    </li>

                    <hr class="text-secondary" />

                    <li class="nav-item mb-2">
                        <a asp-controller="Sale" asp-action="Create"
                           class="btn btn-warning w-100 text-white rounded-pill fw-semibold text-start">
                            <i class="bi bi-cart-plus me-2"></i> Crear Venta
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="btn btn-outline-warning w-100 rounded-pill fw-semibold text-start">
                            <i class="bi bi-bag-check-fill me-2"></i> Imprimir Ventas
                        </a>
                    </li>
                </ul>
            </div>

            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index"
                   class="btn btn-outline-light w-100 rounded-pill fw-semibold">
                    <i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión
                </a>
            </div>
        </div>

        <!-- Main content -->
        <div class="flex-grow-1">
            <!-- Header -->
            <nav class="navbar navbar-light bg-white shadow-sm px-4 py-3">
                <div class="d-flex justify-content-between w-100 align-items-center">
                    <h4 class="fw-bold mb-0 text-dark">
                        <i class="bi bi-receipt text-warning me-2"></i> Registrar Venta
                    </h4>
                    <a asp-controller="Equipment" asp-action="Index"
                       class="btn btn-outline-secondary rounded-pill">
                        <i class="bi bi-arrow-left-circle me-2"></i> Volver
                    </a>
                </div>
            </nav>

            <!-- Form Card -->
            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-lg-6 col-md-8">
                        <div class="card shadow-lg border-0 rounded-4">
                            <div class="card-body p-5">
                                <h2 class="text-center fw-bold text-secondary mb-4">
                                    <i class="bi bi-cart-check-fill text-warning"></i> Nueva Venta
                                </h2>
                                <hr class="mb-4" />

                                <form asp-controller="Sale" asp-action="Create" method="post">
                                    <div class="mb-3">
                                        <label asp-for="EquipmentId" class="form-label fw-semibold">Seleccionar equipo</label>
                                        <select asp-for="EquipmentId" class="form-select form-select-lg rounded-3 shadow-sm">
                                            <option value="">-- Seleccione un equipo --</option>
                                            @* Aquí deberías llenar el dropdown desde el ViewBag *@
                                            @if (ViewBag.Equipments != null)
                                            {
                                                foreach (var eq in ViewBag.Equipments)
                                                {
                                                    <option value="@eq.Id">@eq.Name</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="EquipmentId" class="text-danger small"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="ProductId" class="form-label fw-semibold">Seleccionar producto (opcional)</label>
                                        <select asp-for="ProductId" class="form-select form-select-lg rounded-3 shadow-sm">
                                            <option value="">-- Seleccione un producto --</option>
                                            @if (ViewBag.Products != null)
                                            {
                                                foreach (var p in ViewBag.Products)
                                                {
                                                    <option value="@p.Id">@p.Name</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="ProductId" class="text-danger small"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Total" class="form-label fw-semibold">Total</label>
                                        <input asp-for="Total" type="number" step="0.01"
                                               class="form-control form-control-lg rounded-3 shadow-sm"
                                               placeholder="Ej: 120000" required />
                                        <span asp-validation-for="Total" class="text-danger small"></span>
                                    </div>

                                    <div class="mb-4">
                                        <label asp-for="SaleDate" class="form-label fw-semibold">Fecha de venta</label>
                                        <input asp-for="SaleDate" type="datetime-local" class="form-control form-control-lg rounded-3 shadow-sm"
                                               value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" readonly />
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-warning text-white btn-lg rounded-pill shadow-sm">
                                            <i class="bi bi-check-circle-fill me-2"></i> Registrar Venta
                                        </button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
